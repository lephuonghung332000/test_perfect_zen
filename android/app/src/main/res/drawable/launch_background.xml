<?xml version="1.0" encoding="utf-8"?>
<!-- Modify this file to customize your launch splash screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="#9669D1"
                android:endColor="#7A67F3"
                android:angle="90"/>
        </shape>
    </item>
    <item android:top="100dp">
        <bitmap android:gravity="top" android:src="@mipmap/splash_screen_top"/>
    </item>
    <item>
        <bitmap android:gravity="bottom" android:src="@mipmap/splash_screen_bottom"/>
    </item>
</layer-list>
